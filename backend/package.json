{
  "name": "holy-cross-backend",
  "version": "1.0.0",
  "description": "Backend API for Holy Cross Convent School Brooklyn - Production Ready",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc && npm run db:generate",
    "build:production": "npm run clean && tsc && npm run db:generate",
    "clean": "rm -rf dist",
    "test": "jest --watchAll --verbose",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.{ts,json}",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "ts-node src/scripts/seed.ts",
    "db:init-stats": "ts-node src/scripts/initializeSchoolStats.ts",
    "db:backup": "sqlite3 prisma/dev.db \".backup 'backups/$(date +%Y%m%d_%H%M%S).db'\"",
    "db:reset": "prisma migrate reset --force",
    "logs": "tail -f logs/app.log",
    "health": "curl -f http://localhost:5000/api/health",
    "docker:build": "docker build -t holy-cross-backend .",
    "docker:run": "docker run -p 5000:5000 holy-cross-backend",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop holy-cross-backend",
    "pm2:restart": "pm2 restart holy-cross-backend",
    "pm2:logs": "pm2 logs holy-cross-backend"
  },
  "keywords": [
    "school",
    "api",
    "express",
    "prisma",
    "sqlite"
  ],
  "author": "Holy Cross Convent School",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "@types/uuid": "^10.0.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "prisma": "^6.11.1",
    "puppeteer": "^23.10.4",
    "sharp": "^0.33.5",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0",
    "winston": "^3.13.0",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^24.0.10",
    "@types/nodemailer": "^6.4.14",
    "@types/sharp": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
