{
  "name": "holy-cross-backend",
  "version": "1.0.0",
  "description": "Holy Cross Convent School Brooklyn Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "TS_NODE_CACHE=false nodemon --exec ts-node --transpile-only src/server.ts",
    "build": "tsc --skipLibCheck",
    "build:deploy": "tsc --project tsconfig.deploy.json",
    "build:production": "npm run prisma:generate:prod && npm run build",
    "start": "node dist/server.production.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:generate:prod": "prisma generate --schema=./prisma/schema.postgresql.prisma",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy --schema=./prisma/schema.postgresql.prisma",
    "prisma:deploy": "prisma migrate deploy --schema=./prisma/schema.postgresql.prisma",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node src/scripts/seed.ts",
    "seed:remote": "ts-node src/scripts/remoteSeed.ts",
    "postinstall": "npm run prisma:generate:prod"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@types/node": "^20.19.19",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "sharp": "^0.33.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/tests/**",
      "!src/**/__tests__/**"
    ]
  }
}
