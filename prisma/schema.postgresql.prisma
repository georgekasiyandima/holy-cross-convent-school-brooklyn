model DocumentType {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  isRequired  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("document_types")
}

model Document {
  id          String   @id @default(cuid())
  title       String
  description String?
  category    String
  type        String?
  tags        String? // JSON string for tags array
  isPublished Boolean  @default(false)
  filePath    String?
  fileName    String?
  fileUrl     String?
  fileSize    Int?
  mimeType    String?
  authorId    String?
  authorName  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("documents")
}

