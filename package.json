{
  "name": "holy-cross-convent-school-brooklyn",
  "version": "1.0.0",
  "description": "Holy Cross Convent School Brooklyn - Modern School Management Platform",
  "main": "backend/dist/server.js",
  "scripts": {
    "dev": "fkill :9009 :3003 :5000 -f -s && concurrently \"npm:backend:dev\" \"npm:frontend:dev\"",
    "start": "npm run backend:start",
    "build": "npm run backend:build && npm run frontend:build",
    "test": "npm run backend:test && npm run frontend:test",
    "test:watch": "jest --watchAll --verbose",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "backend:dev": "cd backend && npm run dev",
    "backend:build": "cd backend && npm run build",
    "backend:start": "cd backend && npm start",
    "backend:test": "cd backend && npm test",
    "frontend:dev": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "frontend:test": "cd frontend && npm test",
    "db:generate": "cd backend && npm run db:generate",
    "db:push": "cd backend && npm run db:push",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "db:studio": "cd backend && npm run db:studio",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules backend/dist frontend/build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "deploy:staging": "npm run build && npm run test",
    "deploy:production": "npm run build && npm run test && npm run lint",
    "health:check": "curl -f http://localhost:5000/api/health || exit 1",
    "logs": "tail -f backend/logs/app.log",
    "backup": "cd backend && npm run db:backup",
    "monitor": "concurrently \"npm:health:check\" \"npm:logs\""
  },
  "keywords": [
    "school-management",
    "education",
    "react",
    "typescript",
    "express",
    "prisma",
    "sqlite",
    "postgresql",
    "material-ui",
    "brooklyn",
    "cape-town",
    "catholic-school"
  ],
  "author": {
    "name": "Holy Cross Convent School Brooklyn",
    "email": "info@holycrossbrooklyn.edu",
    "url": "https://holycrossbrooklyn.edu"
  },
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/holycrossbrooklyn/website.git"
  },
  "bugs": {
    "url": "https://github.com/holycrossbrooklyn/website/issues"
  },
  "homepage": "https://holycrossbrooklyn.edu",
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-react": "^7.23.3",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-loader": "^9.1.3",
    "babel-plugin-styled-components": "^2.1.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.9.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.2.0",
    "fkill-cli": "^8.0.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.7",
    "msw": "^2.0.13",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.5",
    "string-replace-loader": "^3.1.0",
    "undici": "^5.28.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "axios": "^1.6.5",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "framer-motion": "^10.18.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "sqlite3": "^5.1.7",
    "styled-components": "^6.1.8",
    "yup": "^1.3.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "ie >= 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test && npm run type-check"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
