{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "public": true,
  "github": {
    "enabled": true,
    "autoAlias": false
  },
  "functions": {
    "frontend/build/**/*.js": {
      "maxDuration": 30
    }
  }
}
