{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*\\.(jpg|jpeg|png|gif|svg|ico|pdf|webp|mp4|mp3|woff|woff2|ttf|eot))",
      "dest": "/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "public": true,
  "github": {
    "enabled": true,
    "autoAlias": false
  },
  "functions": {
    "frontend/build/**/*.js": {
      "maxDuration": 30
    }
  }
}
